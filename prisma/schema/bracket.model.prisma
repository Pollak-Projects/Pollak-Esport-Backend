model Bracket {
  id          String        @id @default(uuid())
  name        String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now()) @updatedAt
  bracketItems BracketItem[]
}

model BracketItem {
  id          String        @id @default(uuid())
  title       String
  bracketId   String
  bracket     Bracket       @relation(fields: [bracketId], references: [id])
  seeds       Seed[]
}

model Seed { 
  id          String        @id @default(uuid())
  date        DateTime
  bracketItemId String
  bracketItem BracketItem   @relation(fields: [bracketItemId], references: [id])
  teams       Team[]        @relation("SeedTeams", references: [id])
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now()) @updatedAt
}

model Team {
  id          String        @id @default(uuid())
  name        String
  seeds       Seed[]        @relation("SeedTeams", references: [id])
}